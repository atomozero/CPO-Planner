{% extends "base.html" %}
{% load static %}

{% block title %}Login - CPO Planner{% endblock %}

{% block auth_content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image">
                            <!-- Background image will be set via CSS -->
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Benvenuto in CPO Planner</h1>
                                </div>
                                <form class="user" method="post">
                                    {% csrf_token %}
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user" name="username" 
                                               placeholder="Username" required>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-user" name="password"
                                               placeholder="Password" required>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" id="rememberCheck" name="remember">
                                            <label class="custom-control-label" for="rememberCheck">Ricordami</label>
                                        </div>
                                    </div>
                                    {% if form.errors %}
                                    <div class="alert alert-danger">
                                        Username o password non validi. Per favore riprova.
                                    </div>
                                    {% endif %}
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Login
                                    </button>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="{% url 'password_reset' %}">Password dimenticata?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_css %}
<style>
    .bg-login-image {
        background: url('{% static "img/login-bg.jpg" %}');
        background-position: center;
        background-size: cover;
    }
    
    /* Fallback if image not available */
    .bg-login-image:before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        opacity: 0.8;
    }
</style>
{% endblock %}